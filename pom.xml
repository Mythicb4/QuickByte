<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.mycompany</groupId>
  <artifactId>QuickByte</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- Ajusta a la versión de Java que usas (estás usando JDK 24) -->
    <maven.compiler.source>24</maven.compiler.source>
    <maven.compiler.target>24</maven.compiler.target>

    <!-- Versión de JavaFX: usamos 24 porque tu JDK es 24 -->
    <javafx.version>24</javafx.version>

    <!-- Plataforma: windows / win / win-x64 según repositorio. 
         Si tu JDK/OS es Windows x64, usa 'win' o 'win-x64'. -->
    <javafx.platform>win</javafx.platform>
  </properties>

  <dependencies>
    <!-- Control UI (incluye graphics, base) -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>

    <!-- FXML si tu app lo necesita (no hace daño incluirlo) -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Compiler plugin: opcionalmente fija release si quieres -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
          <compilerArgs>
            <arg>--enable-preview</arg>
          </compilerArgs>
        </configuration>
      </plugin>

      <!-- Plugin oficial (openjfx) para correr con mvn javafx:run -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <!-- Pon aquí la clase principal completa con package -->
          <mainClass>com.mycompany.quickbite.QuickBiteFX</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
    <name>QuickBite</name>
</project>
