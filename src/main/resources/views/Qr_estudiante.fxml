            </Label>
            <Label fx:id="lblProductos" prefHeight="46.0" prefWidth="222.0" text="Pedido: Croisantt, Empanadas ">
               <font>
                  <Font name="SansSerif Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label fx:id="lblTotal" text="Total: ">
               <font>
                  <Font name="SansSerif Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>

                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="btnCancelar" onAction="#onCancelar" prefWidth="120" text="Cancelar" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
