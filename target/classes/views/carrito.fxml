<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox fx:controller="com.mycompany.quickbite.QBCarritoFX" 
      spacing="15" 
      alignment="TOP_CENTER" 
      xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/24">
    
    <padding>
        <Insets top="25.0" right="25.0" bottom="25.0" left="25.0" />
    </padding>

    <Label text="Tu Pedido" style="-fx-font-weight: bold; -fx-text-fill: #333333;">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    
    <TableView fx:id="tablaCarrito" prefHeight="300.0" prefWidth="500.0">
        <columns>
            <TableColumn prefWidth="250.0" text="Producto">
                <cellValueFactory>
                    <PropertyValueFactory property="productName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="80.0" text="Cantidad">
                <cellValueFactory>
                    <PropertyValueFactory property="quantity" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150.0" text="Subtotal">
                <cellValueFactory>
                    <PropertyValueFactory property="subtotal" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <VBox alignment="CENTER_RIGHT" prefWidth="500.0">
        <Label text="Total a Pagar:" style="-fx-font-weight: bold; -fx-text-fill: #555555;">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="lblTotalPagar" text="0.00" style="-fx-font-weight: bold; -fx-text-fill: #007bff;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </VBox>
    
    <Button fx:id="btnGenerarQR" onAction="#handleGenerarQR"
            text="Generar Código QR"
            prefWidth="250.0"
            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
    
    <Button onAction="#handleRegresar"
            text="← Seguir Comprando"
            prefWidth="250.0"
            style="-fx-background-color: #6c757d; -fx-text-fill: white;">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
    
</VBox>
